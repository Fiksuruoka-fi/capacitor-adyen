<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Error (Material state) -->
    <item app:state_error="true" android:color="@color/adyen_error"/>

    <!-- Focused (framework state) -->
    <item android:state_focused="true" android:color="@color/adyen_primary"/>

    <!-- Optional hover (framework state). If you don't need it, delete this line. -->
    <!-- <item android:state_hovered="true" android:color="@color/adyen_outline_variant"/> -->

    <!-- Default -->
    <item android:color="@color/adyen_outline"/>
</selector>
