{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "example", "scripts", "test", "android", "ios"]
}
